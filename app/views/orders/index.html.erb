<div class="header">
  <div class="container">
    <h1>Orders</h1>
  </div>
</div>

<div class="orders">
  <div class="container">
      <table class="order" style="width:100%">
        <thead>
										<tr>
											<th>ID</th>
											<th>Description</th>
											<th>Date Created</th>
										</tr>
									</thead>
        <% @orders.each do |order| %>
              <tr>
                <td class="orderid"><%= order.id %></td>
                <td class="content"><%= order.content %></td>
                <td class="time"><%= order.created_at %></td>
              </tr>
        <% end %>
      </table>
    <a href="orders/new" class="button special">New Order</a>

  </div>
</div>