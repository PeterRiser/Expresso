
			
  <div class="container">
    <br/>
    <h1>Orders</h1>
  </div>

<div class="orders">
  <div class="container">
      <table class="order" style="width:100%">
        <thead>
										<tr>
											<th>ID</th>
											<th>Time of Delivery</th>
											<th>Location</th>
											<th>Name</th>
											<th>Description</th>
											<th>Date Created</th>
										</tr>
									</thead>
        <% @orders.each do |order| %>
            <% if order.acceptedByID == 0 %>
              <tr>
                <td class = "orderid"><%= order.id %></td>
                <td class = "delivery_time"><%= order.time %></td>
                <td class = "Location"><%= order.location %></td>
                <td class = "Name"><%= order.name %></td>
                <td class = "Order Contents"><%= order.content %></td>
                <td class = "Creation Time"><%= order.created_at %></td>
              </tr>
            <% end %>  
        <% end %>
      </table>
    <%= link_to "New Order", "orders/new",{ :class=>"button special"} %>
  </div>
</div>

