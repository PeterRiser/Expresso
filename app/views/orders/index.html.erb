<div class="orders">
  <div class="container">
      <table class="order" style="width:100%">
        <thead>
										<tr>
											<th>ID</th>
											<th>Description</th>
											<th>Date Created</th>
										</tr>
									</thead>
        <% @orders.each do |order| %>
            <% if order.acceptedByID == 0 %>
              <tr>
                <td class="orderid"><%= order.id %></td>
                <td class="content"><%= order.content %></td>
                <td class="time"><%= order.created_at %></td>
              </tr>
            <% end %>  
        <% end %>
      </table>
    <%= link_to "New Order", "orders/new",{ :class=>"button special"} %>
  </div>
</div>

